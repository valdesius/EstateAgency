<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <changeSet id="2023-09-30--0003--deal" author="malyshev">
        <preConditions>
            <not>
                <tableExists tableName="deal"/>
            </not>
        </preConditions>

        <createTable tableName="deal">
            <column name="id"
                    type="NUMERIC(19,0)"
                    autoIncrement="true">
                <constraints nullable="false"
                             primaryKey="true"/>
            </column>

            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>

            <column name="type" type="ENUM('BUY', 'SELL', 'RENT')">
                <constraints nullable="false"/>
            </column>

            <column name="client_id"
                    type="NUMERIC(19,0)">
                <constraints nullable="false"
                             deleteCascade="true"
                             foreignKeyName="fk_deal_client"
                             references="client(id)"/>
            </column>

            <column name="realtor_id"
                    type="NUMERIC(19,0)">
                <constraints nullable="false"
                             deleteCascade="true"
                             foreignKeyName="fk_deal_realtor"
                             references="realtor(id)"/>
            </column>

            <column name="realty_id"
                    type="NUMERIC(19,0)">
                <constraints nullable="false"
                             deleteCascade="true"
                             foreignKeyName="fk_deal_realty"
                             references="realty(id)"/>
            </column>


        </createTable>
    </changeSet>
</databaseChangeLog>